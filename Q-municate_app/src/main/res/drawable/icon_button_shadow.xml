<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/grey_800"/>
                    <!-- alttan gölge -->
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:bottom="3px">
                <shape>
                    <solid android:color="@color/grey_100"/>
                    <!-- alttan gölge -->
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:right="1px"
                android:bottom="3px">
                <shape>
                    <solid android:color="@color/grey_300"/>
                    <!-- alttan gölge -->
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:right="1px"
                android:bottom="3px"
                android:top="1px">
                <shape>
                    <solid android:color="@color/grey_500"/>
                    <!-- alttan gölge -->
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:left="2px"
                android:right="1px"
                android:bottom="3px"
                android:top="1px"
                >
                <shape>
                    <padding android:bottom="3dp"/>
                    <gradient
                        android:startColor="#ffffff"
                        android:endColor="#ffeedd"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/pink_800"/>
                    <corners android:radius="5dp"/>

                </shape>
            </item>
            <item android:bottom="3px">
                <shape>
                    <solid android:color="@color/pink_100"/>
                    <!-- alttan gölge -->
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:right="1px"
                android:bottom="3px">
                <shape>
                    <solid android:color="@color/pink_300"/>
                    <!-- alttan gölge -->
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:right="1px"
                android:bottom="3px"
                android:top="1px">
                <shape>
                    <solid android:color="@color/pink_500"/>
                    <!-- alttan gölge -->
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item
                android:left="2px"
                android:right="1px"
                android:bottom="3px"
                android:top="1px">
                <shape>
                    <padding android:bottom="3dp"/>
                    <gradient
                        android:startColor="#ffaf6f"
                        android:endColor="#ffe3d7"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>