<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_nav_header"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/density_8"
    android:paddingBottom="@dimen/density_8">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/density_100"
        android:layout_height="@dimen/density_100"
        android:layout_marginBottom="@dimen/density_8"
        android:background="@drawable/placeholder_user"
        app:civ_border_color="@color/colorTextOtu"
        app:civ_border_width="@dimen/density_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/density_8"
            android:gravity="center"
            android:maxLines="2"
            android:text="NAMA"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEkl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_8"
                android:gravity="center"
                android:maxLines="2"
                android:text="EKL000000"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/density_8"
                android:layout_marginLeft="@dimen/density_8"
                android:layout_marginEnd="@dimen/density_8"
                android:layout_marginRight="@dimen/density_8"
                android:text="-"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvStarMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_8"
                android:gravity="center"
                android:maxLines="2"
                android:text="FREE"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="Hanya dengan OTU, semua jadi dekat."
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
