<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextOtu"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/density_16"
    android:paddingBottom="@dimen/density_8"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="@dimen/density_8"
        android:background="@drawable/ic_default"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/density_8"
            android:gravity="center"
            android:maxLines="2"
            android:text="NAMA"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEkl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_8"
                android:gravity="center"
                android:maxLines="2"
                android:text="EKL000000"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_8"
                android:gravity="center"
                android:maxLines="2"
                android:text=" - "
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStarMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_8"
                android:gravity="center"
                android:maxLines="2"
                android:text="FREE"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/density_8"
            android:gravity="center"
            android:maxLines="2"
            android:text="Hanya denga OTU, semua jadi dekat."
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
