<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextOtu"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="@dimen/density_16"
    android:paddingBottom="@dimen/density_8"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/circleView"
        android:layout_margin="@dimen/density_8"
        android:layout_width="@dimen/density_100"
        android:layout_height="@dimen/density_100"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/density_8"
        android:src="@drawable/ic_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/density_8"
            android:maxLines="2"
            android:text="NAMA"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEkl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/density_8"
            android:maxLines="2"
            android:text="EKL000000"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/density_8"
            android:maxLines="2"
            android:text="Hanya denga OTU, semua jadi dekat."
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
