<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_common"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/company_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_common"
        android:layout_marginLeft="@dimen/padding_common"
        android:layout_marginRight="@dimen/padding_common"
        android:background="@drawable/ic_domain_grey_32dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/density_8"
        android:layout_weight="1"
        android:gravity="center|left"
        android:orientation="vertical">

        <com.eklanku.otuChat.ui.views.ARTextView
            android:id="@+id/contact_company_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="google corp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/chkSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible" />

</LinearLayout>