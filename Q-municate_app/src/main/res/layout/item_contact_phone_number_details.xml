<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/phone_view"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_margin="@dimen/padding_common"
        android:layout_marginLeft="@dimen/padding_common"
        android:layout_marginRight="@dimen/padding_common"
        android:background="@drawable/ic_phone" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.eklanku.otuChat.ui.views.ARTextView
            android:id="@+id/contact_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingTop="@dimen/density_16"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="+10430002589" />

        <com.eklanku.otuChat.ui.views.ARTextView
            android:id="@+id/contact_number_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left|top"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="mobile" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/chkSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible" />

</LinearLayout>