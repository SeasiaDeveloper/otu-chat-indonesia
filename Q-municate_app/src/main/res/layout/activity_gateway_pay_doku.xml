<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/density_8">

    <Button
        android:id="@+id/btn_ticketing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_round_new"
        android:text="Topup Ticketing"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnCreditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_8"
        android:background="@drawable/custom_round_new"
        android:text="Topup Credit card"
        android:textColor="@color/white" />

</LinearLayout>