<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/density_8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_product_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/green_50"
        android:gravity="center"
        android:padding="@dimen/density_8"
        android:text="PRODUK_TYPE"
        android:textSize="@dimen/text_16"
        android:textStyle="bold"
        android:textColor="@color/colorTextOtuDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/density_8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Tanggal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/density_4"
                    android:layout_marginLeft="@dimen/density_4"
                    android:layout_marginEnd="@dimen/density_4"
                    android:layout_marginRight="@dimen/density_4"
                    android:text=":" />

                <TextView
                    android:id="@+id/et_tgl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Bank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/density_4"
                    android:layout_marginLeft="@dimen/density_4"
                    android:layout_marginEnd="@dimen/density_4"
                    android:layout_marginRight="@dimen/density_4"
                    android:text=":" />

                <TextView
                    android:id="@+id/et_bank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Jumlah Penarikan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/density_4"
                    android:layout_marginLeft="@dimen/density_4"
                    android:layout_marginEnd="@dimen/density_4"
                    android:layout_marginRight="@dimen/density_4"
                    android:text=":" />

                <TextView
                    android:id="@+id/et_jumlah_penarikan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Nama" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/density_4"
                    android:layout_marginLeft="@dimen/density_4"
                    android:layout_marginEnd="@dimen/density_4"
                    android:layout_marginRight="@dimen/density_4"
                    android:text=":" />

                <TextView
                    android:id="@+id/et_atas_nama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Nomor Rekening" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/density_4"
                    android:layout_marginLeft="@dimen/density_4"
                    android:layout_marginEnd="@dimen/density_4"
                    android:layout_marginRight="@dimen/density_4"
                    android:text=":" />

                <TextView
                    android:id="@+id/et_nomor_rekening"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/density_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Status" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/density_4"
                    android:layout_marginLeft="@dimen/density_4"
                    android:layout_marginEnd="@dimen/density_4"
                    android:layout_marginRight="@dimen/density_4"
                    android:text=":" />

                <TextView
                    android:id="@+id/et_status_penarikan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/density_8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/density_8"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_doku_failed"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutup"
            android:layout_marginTop="@dimen/density_8"
            android:textColor="@color/red_700"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|top"
            android:layout_marginTop="@dimen/density_8">

            <ImageView
                android:id="@+id/btnprint"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_riwayat_print"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/density_16"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btnshare"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_riwayat_share"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/density_16"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btndownload"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_riwayat_download"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
