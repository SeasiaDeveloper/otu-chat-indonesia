<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_alert"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data transfer sudah benar?"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apakah anda yakin ingin melanjutkan transfer saldo dengan detail"
        android:textColor="@color/black"
        android:layout_marginBottom="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Nomor Tujuan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/density_4"
            android:layout_marginLeft="@dimen/density_4"
            android:layout_marginRight="@dimen/density_4"
            android:layout_marginStart="@dimen/density_4"
            android:text=":" />

        <TextView
            android:id="@+id/txt_nomor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Nominal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/density_4"
            android:layout_marginLeft="@dimen/density_4"
            android:layout_marginRight="@dimen/density_4"
            android:layout_marginStart="@dimen/density_4"
            android:text=":" />

        <TextView
            android:id="@+id/txt_voucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="@dimen/density_16">

        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/background_round_corner_gray"
            android:textColor="@color/white"
            android:text="Batalkan"
            android:layout_marginRight="8dp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/background_round_corner_green"
            android:textColor="@color/white"
            android:textSize="@dimen/density_12"
            android:text="Lanjutkan"
            android:visibility="visible"/>
    </LinearLayout>




</LinearLayout>