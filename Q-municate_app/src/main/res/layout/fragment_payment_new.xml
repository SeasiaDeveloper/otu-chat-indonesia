                                android:layout_width="60dp"
                                android:src="@drawable/ic_ic_pay_pulsa"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icon_button_shadow" />

                            <ImageView
                                android:id="@+id/ivPulsa"
