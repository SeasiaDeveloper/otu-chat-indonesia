<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/message_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_chat_input_message_height"
        android:layout_weight="1"
        android:layout_marginRight="-12dp"
        android:background="@drawable/background_green_send_message">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_chat_input_message_height"
            android:background="@drawable/rounded_shape_message"
            android:layout_toStartOf="@id/action_buttons_view"
            android:layout_margin="6dp"
            android:layout_toLeftOf="@id/action_buttons_view">

            <com.rockerhieu.emojicon.EmojiconEditText
                android:id="@+id/message_edittext"
                style="@style/MatchParent"
                android:layout_toEndOf="@+id/smile_panel_imagebutton"
                android:layout_toRightOf="@+id/smile_panel_imagebutton"
                android:autoLink="all"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:hint="@string/dialog_hint_message"
                android:gravity="center_vertical"
                android:maxLines="5"
                android:textSize="14sp"
                android:textColorHint="@color/gray_color_message"
                android:textColor="@color/black"
                emojicon:emojiconSize="@dimen/chat_emoji_item_preview_size"
                />

            <ImageButton
                style="@style/ChatActionSmileButtonStyle"
                android:id="@+id/smile_panel_imagebutton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_margin="2dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_smile_green" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/action_buttons_view"
            style="@style/WrapContent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true">

            <ImageButton
                style="@style/ChatActionButtonStyle"
                android:id="@+id/attach_button"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_attach_white" />

            <ImageButton
                style="@style/ChatActionButtonStyle"
                android:id="@+id/attach_camera"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_camera_white" />

        </LinearLayout>

        <include layout="@layout/view_input_audio_container"
            android:visibility="invisible"/>

    </RelativeLayout>


    <ImageButton
        style="@style/ChatRoundActionButtonStyle"
        android:id="@+id/send_button"
        android:onClick="sendMessage"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_send_message"
        android:layout_gravity="center_vertical"
        android:padding="9dp"
        android:visibility="gone"
        android:background="@drawable/background_round_icon_voice" />

    <com.quickblox.ui.kit.chatmessage.adapter.media.recorder.view.QBRecordAudioButton
        style="@style/ChatRoundActionButtonStyle"
        android:id="@+id/chat_record_audio_button"
        android:scaleType="centerInside"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_round_icon_voice"
        android:src="@drawable/ic_sound_attachment"/>

</LinearLayout>