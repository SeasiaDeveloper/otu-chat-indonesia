<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.eklanku.otuChat.ui.activities.payment.transaksi.TransPln">

    <RadioGroup
        android:id="@+id/radio_group_pln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_pln_token"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="PLN TOKEN" />

        <RadioButton
            android:id="@+id/radio_pln"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PLN" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_4"
        android:text="Pilih Pembayaran"
        android:textColor="@color/colorTextOtu"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_spinner"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spnTransPln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_drop" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_spinner_nominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Pilih Nominal"
            android:textColor="@color/colorTextOtu"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_spinner"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spnTransPlnNominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_drop" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtLayoutTransPulsaNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_16">

        <EditText
            android:id="@+id/txtTransPlnNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg_text"
            android:ems="10"
            android:hint="Masukkan No Pelanggan"
            android:inputType="number"
            android:paddingBottom="@dimen/density_16"
            android:paddingLeft="@dimen/density_8"
            android:paddingStart="@dimen/density_8"
            android:paddingTop="@dimen/density_16" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/layout_transaksi_ke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trans_ke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTransPulsaNo"
            android:text="Transaksi Ke-"
            android:textColor="@color/colorTextOtu"
            android:textSize="12sp"
            android:textStyle="bold"
            android:inputType="number"/>

        <EditText
            android:id="@+id/txt_transaksi_ke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_trans_ke"
            android:background="@drawable/custom_spinner"
            android:hint="Masukkan Transaksi ke-"
            android:inputType="number"
            android:padding="@dimen/density_8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_no_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_16">

            <EditText
                android:id="@+id/txt_no_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_text"
                android:drawableLeft="@drawable/ic_phone"
                android:drawableStart="@drawable/ic_phone"
                android:ems="10"
                android:hint="No HP"
                android:paddingBottom="@dimen/density_16"
                android:paddingEnd="@dimen/density_8"
                android:paddingLeft="@dimen/density_8"
                android:paddingRight="@dimen/density_8"
                android:paddingStart="@dimen/density_8"
                android:paddingTop="@dimen/density_16"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No HP ini digunakan untuk menerima sms konfirmasi" />

    </LinearLayout>

    <Button
        android:id="@+id/btnTransPlnBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_16"
        android:background="@drawable/custom_round_green_dark"
        android:drawableEnd="@drawable/ic_next_white"
        android:drawableLeft="@drawable/ic_balance"
        android:drawableRight="@drawable/ic_next_white"
        android:drawableStart="@drawable/ic_balance"
        android:text="Beli Token Listrik"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>