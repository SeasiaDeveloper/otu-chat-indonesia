            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/btnLogin"-->
            <!--android:layout_margin="10dp"-->
            <!--android:layout_toLeftOf="@+id/lblLoginRegister"-->
