<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.eklanku.otuChat.ui.activities.payment.transaksi.TransPaketData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.eklanku.otuChat.ui.views.ARTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_16"
            android:text="Masukkan No Telepon"
            android:textColor="@color/grey_600"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtLayoutTransPulsaNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/txtTransPaketNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_bottom_border_grey"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingTop="@dimen/density_8"
                    android:paddingBottom="@dimen/density_8"
                    android:textColor="@color/grey_600" />

            </android.support.design.widget.TextInputLayout>


                <ImageView
                    android:id="@+id/imgOpr"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txOpr"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



        </LinearLayout>


        <com.eklanku.otuChat.ui.views.ARTextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Paket"
            android:textColor="@color/grey_600"
            android:textSize="16sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layOprPaket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bottom_border_grey"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/spnTransPaketJenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_drop" />
        </RelativeLayout>


        <com.eklanku.otuChat.ui.views.ARTextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_16"
            android:text="Nama Paket"
            android:textColor="@color/grey_600"
            android:textSize="16sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bottom_border_grey"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/spnTransPaketNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_drop" />

        </RelativeLayout>

        <com.eklanku.otuChat.ui.views.ARTextView
            android:id="@+id/tv_trans_ke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLayoutTransPulsaNo"
            android:layout_marginTop="@dimen/density_8"
            android:text="Transaksi Ke-"
            android:textColor="@color/grey_600"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_transaksi_ke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_trans_ke"
            android:background="@drawable/custom_bottom_border_grey"
            android:hint="Masukkan Transaksi ke-"
            android:inputType="number"
            android:paddingTop="@dimen/density_8"
            android:paddingBottom="@dimen/density_8"
            android:textColor="@color/grey_600" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgopr"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/textopr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

