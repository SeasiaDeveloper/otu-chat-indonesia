<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/density_8">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/density_8"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Pilih pengisian E Tool"
            android:textColor="@color/default_text_icon_otu_color"
            android:textSize="14dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/density_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/density_8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/btnetoolmandiri"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_otu_payment"
                            android:padding="6dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_e_toll_mandiri" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/ivSaldoGojek"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="2dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_e_saldo_gojek" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnetoolmandiri"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="Etool mandiri"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/color_payment_list_icon_text"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/btnetoolbni"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_otu_payment"
                            android:padding="6dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_e_toll_bni" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/ivSaldoGrab"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="2dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_e_saldo_grab" />

                        <TextView
                            android:id="@+id/tvSaldoGrab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnetoolbni"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="Etoll BNI"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/color_payment_list_icon_text"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>