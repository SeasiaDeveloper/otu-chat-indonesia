<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/density_16"
    tools:context="com.eklanku.otuChat.ui.activities.payment.topup.TopupBilling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_ok"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID Pelanggan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/density_4"
                android:layout_marginLeft="@dimen/density_4"
                android:layout_marginRight="@dimen/density_4"
                android:layout_marginStart="@dimen/density_4"
                android:text=":" />

            <TextView
                android:id="@+id/txt_user_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nominal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/density_4"
                android:layout_marginLeft="@dimen/density_4"
                android:layout_marginRight="@dimen/density_4"
                android:layout_marginStart="@dimen/density_4"
                android:text=":" />

            <TextView
                android:id="@+id/txt_nominal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bank" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/density_4"
                android:layout_marginLeft="@dimen/density_4"
                android:layout_marginRight="@dimen/density_4"
                android:layout_marginStart="@dimen/density_4"
                android:text=":" />

            <TextView
                android:id="@+id/txt_bank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Waktu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/density_4"
                android:layout_marginLeft="@dimen/density_4"
                android:layout_marginRight="@dimen/density_4"
                android:layout_marginStart="@dimen/density_4"
                android:text=":" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pesan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/density_4"
                android:layout_marginLeft="@dimen/density_4"
                android:layout_marginRight="@dimen/density_4"
                android:layout_marginStart="@dimen/density_4"
                android:text=":" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5" />
        </LinearLayout>

        <EditText
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:background="@drawable/custom_spinner"
            android:hint="Isi pesan..."
            android:padding="@dimen/density_8" />

        <TextView
            android:id="@+id/textKetKonfirmasiTopupBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/yellow_100"
            android:textColor="@color/brown_800"
            android:layout_above="@+id/textResponKonfirmasiTopupBill"
            android:textSize="11sp"
            android:text="Langkah menuju sukses melakukan deposit:\n1. transfer sesuai nominal sampai 3 digit angka terakhir.\n2. Pastikan no. rek. sesuai dgn a.n. PT. Eklanku Sehati Cemerlang.\n3. Silahkan klik tombol Konfirmasi, setelah transfer dilakukan."/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/density_16"
        android:background="@drawable/custom_round_green_dark"
        android:drawableEnd="@drawable/ic_next_white"
        android:drawableLeft="@drawable/ic_balance"
        android:drawableRight="@drawable/ic_next_white"
        android:drawableStart="@drawable/ic_balance"
        android:text="Confirmation"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <!--UNUSED AND SET GONE BY AYIK-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textTopupBillInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:text="Pembayaran dilakukan dengan transfer ke salah satu bank di bawah ini, silahkan tekan tombol pembayaran deposit untuk melakukan pembayaran dan konfirmasi" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/layConfirmTopupBank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnBayarTopup"
            android:layout_below="@+id/textTopupBillInfo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/green_50"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilihan Anda adalah Paket Deposit:" />

            <TextView
                android:id="@+id/lblTopupBillingNominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/grey_50"
                android:padding="10dp"
                android:text="10000"
                android:textAlignment="center"
                android:textColor="@color/red_900"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="berikut rekening pembayaran kami a.n. PT. Eklanku Indonesia Cemerlang :" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/mandiri" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Bank MANDIRI\nRek. 145-00777-19777" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/bni" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="BNI\nRek. 6261-97-020" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/bri" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="BRI\nRek. 0368-01-002477-30-0" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/bca" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="BCA\nRek. 611-049-1717" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>


        <Button
            android:id="@+id/btnBayarTopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/density_16"
            android:background="@drawable/custom_rectangle"
            android:drawableEnd="@drawable/ic_next_white"
            android:drawableLeft="@drawable/ic_balance"
            android:drawableRight="@drawable/ic_next_white"
            android:drawableStart="@drawable/ic_balance"
            android:text="Pembayaran Deposit"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>