            <TextView
                android:id="@+id/txt_id_tujuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Tujuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/density_4"
                android:layout_marginLeft="@dimen/density_4"
                android:layout_marginRight="@dimen/density_4"
                android:layout_marginStart="@dimen/density_4"
                android:text=":" />

            <TextView
                android:id="@+id/txt_nama_tujuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Waktu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/density_4"
                android:layout_marginLeft="@dimen/density_4"
                android:layout_marginRight="@dimen/density_4"
                android:layout_marginStart="@dimen/density_4"
                android:text=":" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5" />
        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtLayoutLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLayoutLoginEmail"
            app:passwordToggleContentDescription="Password"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/txt_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_text"
                android:drawableLeft="@drawable/ic_key"
                android:drawableStart="@drawable/ic_key"
                android:ems="10"
                android:hint="Masukkan PIN"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/density_16"
                android:paddingLeft="@dimen/density_8"
                android:paddingStart="@dimen/density_8"
                android:paddingTop="@dimen/density_16" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

