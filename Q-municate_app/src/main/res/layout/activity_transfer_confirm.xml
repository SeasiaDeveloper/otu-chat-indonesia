    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textTransferInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:text="Berikut merupakan ringkasan transaksi transfer saldo Anda ke tujuan member OTU" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/layTransferConfirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textTransferInfo"
            android:layout_margin="10dp"
            android:background="@color/green_50"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah transfer Anda adalah" />

            <TextView
                android:id="@+id/lblTransferNominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/grey_50"
                android:padding="10dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/red_900"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Dengan tujuan transfer" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="No. Tujuan"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/lblTransferTujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=":"
                    android:textSize="18dp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Untuk konfirmasi input PIN Anda:"
                android:textColor="@color/colorTextOtu"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtLayoutTransDepositPIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/txtTransDepositPIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_bg_text"
                    android:ems="10"
                    android:hint="Masukkan PIN"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/density_16"
                    android:paddingLeft="@dimen/density_8"
                    android:paddingStart="@dimen/density_8"
                    android:paddingTop="@dimen/density_16" />

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.LinearLayoutCompat>

        <Button
