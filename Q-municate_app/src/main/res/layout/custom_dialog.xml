<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/density_16"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ok"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/density_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/density_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:text="STATUS" />
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="@dimen/density_4"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/density_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:text="FIRTS LAUNCH"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="@dimen/density_4"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/firstlaunch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/density_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:text="TANGGAL"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="@dimen/density_4"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/density_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:text="RAW"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="@dimen/density_4"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/raw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/density_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:text="DECODE"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="@dimen/density_4"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/decode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_round_green_dark"
        android:text="TUTUP"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold" />

</RelativeLayout>
