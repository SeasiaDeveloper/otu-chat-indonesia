<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.eklanku.otuChat.ui.activities.payment.transfer.TransDeposit">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer Deposit"
        android:textColor="@color/colorTextOtu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.eklanku.otuChat.ui.views.ARTextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_4"
        android:text="Masukkan Tujuan"
        android:textColor="@color/grey_600"
        android:textSize="16sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtLayoutTransDepositTujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/txtTransDepositTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bottom_border_grey"
            android:ems="10"
            android:textColor="@color/grey_600"
            android:inputType="text"
            android:paddingBottom="@dimen/density_8"
            android:paddingTop="@dimen/density_8" />
    </android.support.design.widget.TextInputLayout>

    <com.eklanku.otuChat.ui.views.ARTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_4"
        android:text="Masukkan Nominal Transfer"
        android:textColor="@color/grey_600"
        android:paddingTop="@dimen/density_16"
        android:textSize="16sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtLayoutTransDepositJml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/txtTransDepositJml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/grey_600"
            android:inputType="number"
            android:background="@drawable/custom_bottom_border_grey"
            android:paddingBottom="@dimen/density_8"
            android:paddingTop="@dimen/density_8" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btnTransDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_16"
        android:background="@drawable/background_round_corner_green"
        android:text="Transfer"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>