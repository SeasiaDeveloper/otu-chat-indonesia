<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.eklanku.otuChat.ui.activities.payment.transfer.TransDeposit">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer Deposit"
        android:textColor="@color/colorTextOtu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtLayoutTransDepositTujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtTransDepositTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg_text"
            android:ems="10"
            android:hint="Masukkan Tujuan"
            android:inputType="text"
            android:padding="@dimen/density_16"
            android:paddingBottom="@dimen/density_16"
            android:paddingLeft="@dimen/density_8"
            android:paddingStart="@dimen/density_8"
            android:paddingTop="@dimen/density_16" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtLayoutTransDepositJml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtTransDepositJml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Masukkan Nominal Transfer"
            android:inputType="number"
            android:background="@drawable/custom_bg_text"
            android:paddingBottom="@dimen/density_16"
            android:paddingLeft="@dimen/density_8"
            android:paddingStart="@dimen/density_8"
            android:paddingTop="@dimen/density_16" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btnTransDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/density_16"
        android:background="@drawable/custom_round_green_dark"
        android:drawableEnd="@drawable/ic_next_white"
        android:drawableLeft="@drawable/ic_balance"
        android:drawableRight="@drawable/ic_next_white"
        android:drawableStart="@drawable/ic_balance"
        android:text="Transfer"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>