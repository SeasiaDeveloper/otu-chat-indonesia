<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">serif</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/bg_main</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/dark_gray</item>

        <item name="android:textColorPrimary">@color/black</item>

        <item name="actionModeBackground">@color/action_mode_background</item>

        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>

        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <!-- Material Dialog theme -->
        <item name="md_dark_theme">false</item>

        <item name="searchViewStyle">@style/SearchViewStyle</item>

    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="android:typeface">serif</item>
    </style>


    <style name="AppThemeMain" parent="Base.AppTheme">
        <item name="android:typeface">serif</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_setting</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:typeface">serif</item>
        <item name="android:background">@color/accent</item>
        <item name="colorControlNormal">@color/primary</item>
    </style>

    <style name="ToolbarThemeCall" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:typeface">serif</item>
        <item name="android:background">@color/accent</item>
        <item name="colorControlNormal">@color/primary</item>
    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat">
        <item name="android:typeface">serif</item>

    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:typeface">serif</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="VideoPlayerTheme" parent="android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

</resources>